PORT=3000
NODE_ENV=development

# MongoDB URI
MONGODB_URI=mongodb://localhost:27018/birthday_notification
MONGODB_MAX_POOL_SIZE=50 # Max DB connections
MONGODB_MIN_POOL_SIZE=5 # Min DB connections
MONGODB_MAX_IDLE_TIME_MS=30000 # DB idle timeout (ms)

# Redis host
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD= # Redis password
REDIS_DB=0 # Redis DB index

# Webhook target
WEBHOOK_URL=https://eowypdtgjxh1eib.m.pipedream.net
WEBHOOK_TIMEOUT=10000 # Webhook timeout (ms)

# Scheduler hour
BIRTHDAY_CHECK_HOUR=9
RETRY_ATTEMPTS=3 # Max retry attempts
RETRY_DELAY_BASE=60000 # Retry delay base (ms)
TIMEZONE_BATCH_SIZE=5 # Timezone batch size
SCHEDULER_LOCK_TTL=3600000 # Generator lock TTL (ms, 1 hour)
RECOVERY_LOCK_TTL=1800000 # Recovery lock TTL (ms, 30 mins)

# Generator tuning
GENERATOR_DAYS_TO_SCAN=30 # Days to scan forward
GENERATOR_CONCURRENCY_LIMIT=10 # Concurrency limit
GENERATOR_CURSOR_BATCH_SIZE=10000 # User cursor batch size
GENERATOR_BULK_WRITE_BATCH_SIZE=5000 # Bulk write batch size

# Logging level
LOG_LEVEL=info
